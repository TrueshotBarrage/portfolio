---
import BaseLayout from "../layouts/BaseLayout.astro";

// Timeline data - most recent first
interface TimelineEntry {
  date: string;
  organization: string;
  highlight: string;
  description: string;
}

const timeline: TimelineEntry[] = [
  {
    date: "Oct 2025",
    organization: "Valon",
    highlight: "valon",
    description: "Software Engineer ‚Äî ValonOS",
  },
  {
    date: "Aug 2023",
    organization: "EY",
    highlight: "ey",
    description: "Consultant ‚Äî Financial services",
  },
  {
    date: "Aug 2022",
    organization: "Cornell University",
    highlight: "cornell",
    description: "M.S. Computer Science",
  },
  {
    date: "Aug 2021",
    organization: "EmPRISE Lab",
    highlight: "emprise",
    description: "Research Assistant ‚Äî Assistive robotics",
  },
  {
    date: "Jun 2021",
    organization: "Amazon",
    highlight: "amazon",
    description: "SDE Intern ‚Äî Last Mile Planning simulations",
  },
  {
    date: "Jan 2021",
    organization: "Amazon Robotics",
    highlight: "amazon",
    description: "SWE Co-op ‚Äî Embedded systems",
  },
  {
    date: "May 2020",
    organization: "Wasabi Technologies",
    highlight: "wasabi",
    description: "SWE Intern ‚Äî Hot cloud storage",
  },
  {
    date: "Aug 2018",
    organization: "Cornell University",
    highlight: "cornell",
    description:
      "B.S. Computer Science & B.S. Electrical and Computer Engineering",
  },
];
---

<BaseLayout title="About | David Kim">
  <main>
    <article class="about">
      <header class="hero">
        <img
          src="/images/aboutme3.jpg"
          alt="Photo of David Kim"
          class="avatar"
        />
        <div class="hero-text">
          <h1>David Kim</h1>
          <p class="subtitle">Software Engineer, NYC üóΩ</p>
        </div>
      </header>

      <section class="bio">
        <p>
          Hi! I'm Dave, a Software Engineer at
          <strong class="highlight valon">Valon</strong>, and a
          <strong class="highlight cornell">Cornell University</strong> alum with
          an M.S. in Computer Science. I previously worked as a Consultant at <strong
            class="highlight ey">EY</strong
          > and did research in the <strong class="highlight emprise"
            >EmPRISE Lab</strong
          >, <a
            href="https://scholar.google.com/citations?user=NwqMTYkAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            >working with assistive robots to improve the lives of people with
            disabilities.</a
          >
        </p>
        <p>
          In my free time, I love playing board games, practicing jazz piano,
          and cafe hopping around New York City. I'm also actively involved with
          my church community at
          <a
            href="https://firstnyc.org"
            target="_blank"
            rel="noopener noreferrer"
            ><strong class="highlight first">First Baptist Church</strong></a
          >. Whenever I get a chance, I try to travel around the United States
          to meet up with friends.
        </p>
      </section>

      <section class="timeline">
        <h2>Timeline</h2>
        <div class="timeline-entries">
          {
            timeline.map((entry) => (
              <div class="entry">
                <span class="date">{entry.date}</span>
                <div class="content">
                  <strong class={`highlight ${entry.highlight}`}>
                    {entry.organization}
                  </strong>
                  <p>{entry.description}</p>
                </div>
              </div>
            ))
          }
          <div class="timeline-arrow">
            <span class="arrow-label">The past</span>
          </div>
        </div>
      </section>

      <section class="skills">
        <h2>Skills</h2>
        <div class="skill-group">
          <h3>Languages & Frameworks</h3>
          <p>Python ‚Ä¢ React ‚Ä¢ Java ‚Ä¢ Swift</p>
        </div>
        <div class="skill-group">
          <h3>Books</h3>
          <p>
            The Secret Key to Heaven ‚Ä¢ Brave New World ‚Ä¢ The Screwtape Letters
          </p>
        </div>
      </section>

      <nav class="back-link">
        <a href="/">‚Üê Back to terminal</a>
      </nav>
    </article>
  </main>
</BaseLayout>

<style>
  main {
    padding: 3rem 1.5rem;
    width: 100%;
    max-width: 700px;
  }

  .about {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .hero {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--accent);
    box-shadow: 0 0 30px rgba(122, 162, 247, 0.2);
  }

  .hero-text h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .bio p {
    line-height: 1.8;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--accent);
  }

  h3 {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .highlight {
    font-weight: 500;
  }

  .cornell {
    color: #b31b1b;
  }

  .wasabi {
    color: #1bc01b;
  }

  .amazon {
    color: #ff9900;
  }

  .ey {
    color: #ffe600;
  }

  .valon {
    color: #48a3ff;
  }

  .timeline-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
    padding-left: 20px;
  }

  /* Vertical timeline line */
  .timeline-entries::before {
    content: "";
    position: absolute;
    left: 5px;
    top: 8px;
    bottom: 40px;
    width: 2px;
    background: linear-gradient(
      to bottom,
      var(--accent) 0%,
      var(--text-secondary) 100%
    );
  }

  .entry {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 1rem;
    align-items: start;
    position: relative;
    padding: 0.75rem 0;
  }

  /* Timeline dot for each entry */
  .entry::before {
    content: "";
    position: absolute;
    left: -20px;
    top: 1rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--bg-primary);
    border: 2px solid var(--accent);
    z-index: 1;
    transition: all 0.2s ease;
  }

  .entry:hover::before {
    background: var(--accent);
    box-shadow: 0 0 10px rgba(122, 162, 247, 0.5);
  }

  /* Timeline arrow at the bottom */
  .timeline-arrow {
    position: relative;
    padding: 1rem 0 0 0;
    margin-left: -20px;
  }

  .timeline-arrow::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 10px solid var(--text-secondary);
  }

  .arrow-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-style: italic;
    margin-left: 20px;
  }

  .date {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-variant-numeric: tabular-nums;
  }

  .entry .content p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }

  .skill-group {
    margin-bottom: 1.25rem;
  }

  .skill-group p {
    color: var(--text-primary);
  }

  .back-link {
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .back-link a {
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .hero {
      flex-direction: column;
      text-align: center;
    }

    .entry {
      grid-template-columns: 1fr;
      gap: 0.25rem;
      padding-left: 0;
    }

    .entry::before {
      top: 0.85rem;
    }

    .date {
      font-weight: 500;
      color: var(--accent);
    }
  }
</style>
